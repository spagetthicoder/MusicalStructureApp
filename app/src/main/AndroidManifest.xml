<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicalstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".PlayNow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Artists"
            android:label="@string/title_activity_artists"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Songs"
            android:label="@string/title_activity_songs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Playlists" />
        <activity android:name=".Folders"></activity>
    </application>

</manifest>